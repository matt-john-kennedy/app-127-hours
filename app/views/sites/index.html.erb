<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Sitename</th>
      <th>Address</th>
      <th>Description</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.sitename %></td>
        <td><%= site.address %></td>
        <td><%= site.description %></td>
        <td><%= site.price %></td>
        <td><%= site.user %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
